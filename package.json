{
    "name": "buzz-monitor",
    "description": "A serverless microservice that allows subscribers to listen upon uniform events filtered by their own interests.",
    "author": "Lucas Oliveira <contato@devlucas.eti.br>",
    "repository": "https://github.com/devlucas/buzz-monitor",
    "license": "MIT",
    "version": "0.0.1",
    "main": "build/dist/buzz-monitor.js",
    "keywords": [
        "express",
        "webtask",
        "auth0",
        "webhook"
    ],
    "scripts": {
        "clean": "rimraf build",
        "build": "npm run clean && babel src -d build",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "test": "standard && cross-env NODE_ENV=test nyc mocha --recursive tests",
        "start": "npm run test && npm run build && babel server.js -o build/server.js && node build/server.js",
        "deploy": "npm run test && npm run build && npm run build:bundle && wt create build/dist/buzz-monitor.js --secrets-file prod.env",
        "build:static": "cp-file package.json build/dist/package.json",
        "build:bundle": "npm run build:compile:webtask && webpack --config build/webpack.config.js",
        "build:compile:webtask": "babel webpack.config.js -o build/webpack.config.js && babel buzz-monitor.js -o build/buzz-monitor.js && npm run build:static"
    },
    "dependencies": {
        "body-parser": "^1.17.2",
        "express": "^4.15.3",
        "webtask-tools": "^3.2.0"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-plugin-istanbul": "^4.1.4",
        "babel-plugin-root-import": "^5.1.0",
        "babel-plugin-wildcard": "^2.1.0",
        "babel-preset-env": "^1.5.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-register": "^6.24.1",
        "chai": "^4.0.2",
        "coveralls": "^2.13.1",
        "cp-file-cli": "^1.0.1",
        "cross-env": "^5.0.1",
        "dotenv": "^4.0.0",
        "mocha": "^3.4.2",
        "nyc": "^11.0.3",
        "rimraf": "^2.6.1",
        "sinon": "^2.3.6",
        "standard": "^10.0.2",
        "webpack": "^3.0.0",
        "webpack-node-externals": "^1.6.0"
    },
    "nyc": {
        "require": [
            "babel-register"
        ],
        "reporter": [
            "lcov",
            "text"
        ],
        "sourceMap": false,
        "instrument": false
    },
    "babel": {
        "presets": [
            "es2015",
            [
                "env",
                {
                    "targets": {
                        "node": true
                    }
                }
            ]
        ],
        "plugins": [
            "wildcard",
            [
                "babel-plugin-root-import",
                [
                    {
                        "rootPathSuffix": "src",
                        "rootPathPrefix": "@"
                    },
                    {
                        "rootPathSuffix": ".",
                        "rootPathPrefix": "~"
                    }
                ]
            ]
        ],
        "env": {
            "test": {
                "plugins": [
                    "istanbul"
                ]
            }
        }
    }
}
