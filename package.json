{
    "name": "buzz-monitor",
    "description": "A serverless microservice that allows subscribers to listen upon uniform events filtered by their own interests.",
    "author": "Lucas Oliveira <contato@devlucas.eti.br>",
    "license": "MIT",
    "version": "0.0.1",
    "main": "build/dist/buzz-monitor.js",
    "keywords": [
        "express",
        "webtask",
        "auth0"
    ],
    "scripts": {
        "test": "npm run build && npm run build:compile:test && npm run test:unit",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "build": "npm run build:compile",
        "start": "npm run test && npm run build:compile:server && node build/server.js",
        "deploy": "npm run test && npm run build:pack && wt create build/dist/buzz-monitor.js",
        "test:unit": "nyc --reporter=html --reporter=text mocha --recursive build/tests",
        "test:coverage": "echo \"to be done\"",
        "build:clean": "rimraf build",
        "build:clean:test": "rimraf build/tests",
        "build:compile": "npm run build:clean && npm run build:compile:src && npm run build:compile:webtask && npm run build:compile:webpack",
        "build:compile:src": "babel src -d build",
        "build:compile:server": "babel server.js -o build/server.js",
        "build:compile:webtask": "babel buzz-monitor.js -o build/buzz-monitor.js",
        "build:compile:webpack": "babel webpack.config.js -o build/webpack.config.js",
        "build:compile:test": "npm run build:clean:test && babel tests -d build/tests",
        "build:pack": "webpack --config build/webpack.config.js"
    },
    "dependencies": {
        "body-parser": "^1.17.2",
        "express": "^4.15.3",
        "webtask-tools": "^3.2.0"
    },
    "devDependencies": {
        "assert": "^1.4.1",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-plugin-rewire": "^1.1.0",
        "babel-plugin-root-import": "^5.1.0",
        "babel-plugin-wildcard": "^2.1.0",
        "babel-preset-env": "^1.5.2",
        "babel-preset-es2015": "^6.24.1",
        "chai": "^4.0.2",
        "coveralls": "^2.13.1",
        "mocha": "^3.4.2",
        "mock-express-request": "^0.2.0",
        "mock-express-response": "^0.2.1",
        "nyc": "^11.0.3",
        "rimraf": "^2.6.1",
        "sinon": "^2.3.6",
        "webpack": "^3.0.0",
        "webpack-node-externals": "^1.6.0"
    },
    "babel": {
        "presets": [
            "es2015",
            [
                "env",
                {
                    "targets": {
                        "node": true
                    }
                }
            ]
        ],
        "plugins": [
            "wildcard",
            [
                "babel-plugin-root-import",
                [
                    {
                        "rootPathSuffix": "src",
                        "rootPathPrefix": "@"
                    },
                    {
                        "rootPathSuffix": ".",
                        "rootPathPrefix": "~"
                    }
                ]
            ]
        ]
    }
}
